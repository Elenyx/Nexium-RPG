{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run web",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": [
    {
      "name": "production",
      "envVars": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "WEB_PORT",
          "value": "$PORT"
        }
      ]
    }
  ]
}
